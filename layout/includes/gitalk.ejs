<div class="gitalk">
  <%- js({src: 'https://cdn.jsdelivr.net/npm/gitalk@1.6.2/dist/gitalk.min.js', integrity: 'sha256-Coc8etTI4+r4NX7wx/D9yCFlTobmRrVJmaVYEN1mV6A=', crossorigin: 'anonymous'}) %>
  <%- css({href: 'https://cdn.jsdelivr.net/npm/gitalk@1.6.2/dist/gitalk.css', integrity: 'sha256-QblpbkX7hjT2Z5Af6UQAKzE/kZCfUb2BpuNMVdQcjOM=', crossorigin: 'anonymous'}) %>
  <div id="gitalk-container"></div>
  <script type="text/javascript">
    var gitalk = new Gitalk({
      clientID: '<%= theme.gitalk.clientID %>',
      clientSecret: '<%= theme.gitalk.clientSecret %>',
      id: window.location.pathname,
      repo: '<%= theme.gitalk.repo %>',
      owner: '<%= theme.gitalk.owner %>',
      admin: '<%= theme.gitalk.admin %>',
      distractionFreeMode: true
    });

    gitalk.render('gitalk-container')
  </script>
</div>